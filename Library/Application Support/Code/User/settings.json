{
    "autoDocstring.docstringFormat": "numpy",
    "autoDocstring.startOnNewLine": true,

    "aws.codeWhisperer.shareCodeWhispererContentWithAWS": false,
    "aws.experiments": {
        "jsonResourceModification": true
    },
    "aws.telemetry": false,

    "chat.commandCenter.enabled": false,

    "coverage-gutters.showLineCoverage": true,
    "coverage-gutters.showGutterCoverage": false,

    "debug.internalConsoleOptions": "openOnSessionStart",
    "debug.openDebug": "openOnSessionStart",

    "diffEditor.codeLens": true,
    "diffEditor.experimental.showMoves": true,
    "diffEditor.experimental.useTrueInlineView": true,
    "diffEditor.hideUnchangedRegions.enabled": true,
    "diffEditor.ignoreTrimWhitespace": false,

    "debugpy.showPythonInlineValues": true,

    "editor.accessibilitySupport": "off",
    "editor.autoClosingBrackets": "beforeWhitespace",
    "editor.autoClosingComments": "beforeWhitespace",
    "editor.autoClosingQuotes": "beforeWhitespace",
    "editor.experimental.asyncTokenization": true,
    "editor.experimentalEditContextEnabled": true,
    // Maple Mono CN is used to make sure CJK characters are always double width in editor with consistent experience in terminal
    "editor.fontFamily": "'Maple Mono CN'",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.formatOnSaveMode": "modificationsIfAvailable",
    "editor.guides.bracketPairs": "active",
    "editor.linkedEditing": true,
    "editor.mouseWheelZoom": true,
    "editor.occurrencesHighlight": "multiFile",
    "editor.renderWhitespace": "trailing",
    "editor.rulers": [
        100,
    ],
    "editor.stickyScroll.enabled": true,
    "editor.suggest.preview": true,
    "editor.tabCompletion": "onlySnippets",
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 100,

    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.excludeGitIgnore": true,

    "files.autoGuessEncoding": true,
    "files.autoSave": "onWindowChange",
    "files.autoSaveWhenNoErrors": true,
    "files.exclude": {
        "**/.venv": true,
        "**/__pycache__": true,
        "**/build": true,
        "**/dist": true,
        "**/htmlcov": true,
    },
    "files.insertFinalNewline": true,
    "files.watcherExclude": {
        "**/.venv/**": true,
        "**/__pycache__/**": true,
        "**/build/**": true,
        "**/dist/**": true,
        "**/htmlcov/**": true,
    },

    "flake8.args": [
        "--max-line-length=100",
    ],

    "git-graph.commitDetailsView.fileView.type": "File List",
    "git-graph.repository.fetchAndPrune": true,

    "git.blame.editorDecoration.enabled": true,
    "git.blame.statusBarItem.enabled": true,
    "git.confirmSync": false,
    "git.openRepositoryInParentFolders": "always",
    "git.pruneOnFetch": true,

    "githubPullRequests.focusedMode": "multiDiff",

    "markdown.occurrencesHighlight.enabled": true,

    "notebook.experimental.variablesView": true,
    "notebook.lineNumbers": "on",
    "notebook.stickyScroll.enabled": true,

    "pylint.lintOnChange": true,

    "python.analysis.autoFormatStrings": true,
    "python.analysis.autoImportCompletions": true,
    "python.analysis.cacheLSPData": true,
    "python.analysis.diagnosticSeverityOverrides": {
    },
    "python.analysis.enableColorPicker": true,
    "python.analysis.enableEditableInstalls": true,
    "python.analysis.importFormat": "relative",
    "python.analysis.inlayHints.callArgumentNames": "partial",
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.languageServerMode": "full",
    "python.analysis.persistAllIndices": true,
    "python.analysis.typeCheckingMode": "standard",
    "python.analysis.typeEvaluation.strictDictionaryInference": true,
    "python.analysis.typeEvaluation.strictListInference": true,
    "python.analysis.typeEvaluation.strictSetInference": true,
    "python.analysis.usePullDiagnostics": true,
    "python.analysis.userFileIndexingLimit": 1000,
    "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",
    "python.diagnostics.sourceMapsEnabled": true,
    "python.experiments.optInto": [
        "pythonTestAdapter",
    ],
    "python.testing.pytestArgs": [
        "--color=yes",
        "--capture=no",
        "--verbose"
    ],
    "python.testing.pytestEnabled": true,
    "python.REPL.sendToNativeREPL": true,

    "rainbow_csv.csv_lint_detect_trailing_spaces": true,

    "redhat.telemetry.enabled": false,

    "ruff.format.preview": true,
    "ruff.lineLength": 100,
    "ruff.lint.ignore": [
        // https://docs.astral.sh/ruff/rules/any-type/
        "ANN401",
        // https://docs.astral.sh/ruff/rules/complex-structure/
        "C901",
        "CPY",
        "D",
        "DOC",
        // https://docs.astral.sh/ruff/rules/commented-out-code/
        "ERA001",
        // https://docs.astral.sh/ruff/rules/reimplemented-operator/
        "FURB118",
        // https://docs.astral.sh/ruff/rules/unconventional-import-alias/
        "ICN001",
        // https://docs.astral.sh/ruff/rules/implicit-namespace-package/
        "INP001",
        // https://docs.astral.sh/ruff/rules/too-many-public-methods/
        "PLR0904",
        // https://docs.astral.sh/ruff/rules/too-many-arguments/
        "PLR0913",
        // https://docs.astral.sh/ruff/rules/too-many-positional-arguments/
        "PLR0917",
        // https://docs.astral.sh/ruff/rules/magic-value-comparison/
        "PLR2004",
        // https://docs.astral.sh/ruff/rules/unspecified-encoding/
        "PLW1514",
        // https://docs.astral.sh/ruff/rules/pytest-raises-too-broad/
        "PT011",
        // https://docs.astral.sh/ruff/rules/bad-quotes-inline-string/
        "Q000",
        // https://docs.astral.sh/ruff/rules/assert/
        "S101",
        // https://docs.astral.sh/ruff/rules/suspicious-non-cryptographic-random-usage/
        "S311",
        // https://docs.astral.sh/ruff/rules/suspicious-subprocess-import/
        "S404",
        // https://docs.astral.sh/ruff/rules/subprocess-without-shell-equals-true/
        "S603",
        // https://docs.astral.sh/ruff/rules/start-process-with-partial-path/
        "S607",
        // https://docs.astral.sh/ruff/rules/print/
        "T201",
        // https://docs.astral.sh/ruff/rules/typing-only-third-party-import/
        "TC002",
        // https://docs.astral.sh/ruff/rules/typing-only-standard-library-import/
        "TC003",
        // https://docs.astral.sh/ruff/rules/relative-imports/
        "TID252",
        // https://docs.astral.sh/ruff/rules/raise-vanilla-args/
        "TRY003",
    ],
    "ruff.lint.preview": true,
    "ruff.lint.select": [
        "ALL",
    ],

    "search.exclude": {
        "**/__pycache__": true,
        "**/build": true,
        "**/dist": true,
        "**/htmlcov": true,
    },
    "search.showLineNumbers": true,
    "search.smartCase": true,
    "search.useGlobalIgnoreFiles": true,
    "search.useParentIgnoreFiles": true,

    "shellcheck.customArgs": [
        "--shell=bash",
    ],
    "shellcheck.exclude": [
        // https://www.shellcheck.net/wiki/SC1090
        "SC1090",
        // https://www.shellcheck.net/wiki/SC1091
        "SC1091",
    ],
    "shellcheck.ignorePatterns": {
        "**/*.zsh": false,
    },

    "telemetry.telemetryLevel": "off",

    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.confirmOnExit": "hasChildProcesses",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.enableImages": true,
    "terminal.integrated.enableVisualBell": true,
    "terminal.integrated.fontLigatures": true,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.hideOnStartup": "whenEmpty",
    "terminal.integrated.lineHeight": 1.2,
    "terminal.integrated.mouseWheelZoom": true,
    "terminal.integrated.shellIntegration.history": 1000,
    "terminal.integrated.stickyScroll.enabled": true,
    "terminal.integrated.suggest.enabled": true,

    "typescript.experimental.expandableHover": true,

    "scm.experimental.showHistoryGraph": true,

    "update.mode": "none",

    "vim.highlightedyank.enable": true,
    "vim.hlsearch": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
          "before": ["<C-l>"],
          "commands": [":nohl"]
        },
    ],
    "vim.showMarksInGutter": true,
    "vim.useSystemClipboard": true,
    "vim.visualstar": true,

    "window.newWindowDimensions": "inherit",
    "window.openFilesInNewWindow": "default",
    "window.openWithoutArgumentsInNewWindow": "on",
    "window.restoreFullscreen": true,

    "workbench.commandPalette.experimental.suggestCommands": true,
    "workbench.editor.empty.hint": "hidden",
    "workbench.editorLargeFileConfirmation": 128,
    "workbench.startupEditor": "none",
    "workbench.tree.enableStickyScroll": true,

    "xml.codeLens.enabled": true,

    "yaml.customTags": [
        "!And",
        "!And sequence",
        "!If",
        "!If sequence",
        "!Not",
        "!Not sequence",
        "!Equals",
        "!Equals sequence",
        "!Or",
        "!Or sequence",
        "!FindInMap",
        "!FindInMap sequence",
        "!Base64",
        "!Join",
        "!Join sequence",
        "!Cidr",
        "!Ref",
        "!Sub",
        "!Sub sequence",
        "!GetAtt",
        "!GetAZs",
        "!ImportValue",
        "!ImportValue sequence",
        "!Select",
        "!Select sequence",
        "!Split",
        "!Split sequence",
    ],

    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
    },
}
